<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="exerciseItem"
            type="com.app.ufit.models.ExercisesItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dumbell Curls"
            android:text="@{exerciseItem.name}"
            android:textColor="@color/black"
            android:layout_marginHorizontal="32dp"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Biceps"
            android:text="@{exerciseItem.muscle}"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty:"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvMuscle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            tools:text="Begginer"
            android:text="@{exerciseItem.difficulty}"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintStart_toEndOf="@id/textView"
            app:layout_constraintBottom_toBottomOf="@id/textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>