<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.register.RegisterInfoFragment">

   <ImageView
       android:id="@+id/ivImage"
       android:layout_width="180dp"
       android:layout_height="180dp"
       android:layout_marginTop="6dp"
       android:src="@drawable/woman_gym"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/tvTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="6dp"
       android:text="@string/register_info_title"
       android:textColor="@color/black"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/ivImage" />

   <TextView
       android:id="@+id/tvSubtitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/register_info_subtitle"
       android:textSize="16sp"
       android:layout_marginTop="4dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tvTitle" />

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/tlGender"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
       android:layout_width="320dp"
       android:layout_height="90dp"
       app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:boxBackgroundColor="@color/gray_100"
       app:boxStrokeWidth="0dp"
       app:startIconDrawable="@drawable/peope_outlined"
       app:endIconTint="@color/black"
       android:layout_marginTop="24dp"
       app:helperTextEnabled="true"
       app:helperTextTextColor="@color/red"
       app:boxStrokeColor="@color/white">

      <AutoCompleteTextView
          android:id="@+id/acGender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Escolha o seu gÃªnero"
          android:singleLine="true" />

   </com.google.android.material.textfield.TextInputLayout>

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/tlBirth"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
       android:layout_width="320dp"
       android:layout_height="90dp"
       android:layout_marginTop="8dp"
       app:boxStrokeColor="@color/white"
       app:boxBackgroundColor="@color/gray_100"
       app:helperTextEnabled="true"
       app:helperTextTextColor="@color/red"
       android:padding="5dp"
       app:boxStrokeWidth="0dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tlGender">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etBirth"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/calendar"
          android:drawablePadding="10dp"
          android:hint="Data de nascimento"
          android:paddingStart="10dp"
          android:singleLine="true" />

   </com.google.android.material.textfield.TextInputLayout>

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/tlWeight"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
       android:layout_width="250dp"
       android:layout_height="90dp"
       android:layout_marginTop="8dp"
       android:background="@drawable/round_edit_text_background"
       app:boxStrokeColor="@color/white"
       app:helperTextEnabled="true"
       app:helperTextTextColor="@color/red"
       android:padding="5dp"
       app:boxStrokeWidth="0dp"
       app:layout_constraintStart_toStartOf="@id/tlBirth"
       app:layout_constraintTop_toBottomOf="@id/tlBirth">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etWeight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/weight_scale"
          android:drawableTint="@color/black"
          android:drawablePadding="10dp"
          android:hint="Seu peso"
          android:paddingStart="10dp"
          android:singleLine="true" />

   </com.google.android.material.textfield.TextInputLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/shape_rectangle"
      app:layout_constraintEnd_toEndOf="@id/tlBirth"
      app:layout_constraintTop_toTopOf="@id/tlWeight"
      android:text="KG"
      android:padding="14dp"
      android:textColor="@color/white"
      android:backgroundTint="@color/blue_500"
      app:layout_constraintBottom_toBottomOf="@id/tlWeight" />

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/tlHeight"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
       android:layout_width="250dp"
       android:layout_height="90dp"
       android:layout_marginTop="8dp"
       android:background="@drawable/round_edit_text_background"
       app:boxStrokeColor="@color/white"
       app:helperTextEnabled="true"
       app:helperTextTextColor="@color/red"
       android:padding="5dp"
       app:boxStrokeWidth="0dp"
       app:layout_constraintStart_toStartOf="@id/tlWeight"
       app:layout_constraintTop_toBottomOf="@id/tlWeight">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etHeight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/compare_arrows"
          android:drawableTint="@color/black"
          android:drawablePadding="10dp"
          android:hint="Sua altura"
          android:paddingStart="10dp"
          android:singleLine="true" />

   </com.google.android.material.textfield.TextInputLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/shape_rectangle"
       app:layout_constraintEnd_toEndOf="@id/tlBirth"
       app:layout_constraintTop_toTopOf="@id/tlHeight"
       android:text="CM"
       android:padding="14dp"
       android:textColor="@color/white"
       android:backgroundTint="@color/blue_500"
       app:layout_constraintBottom_toBottomOf="@id/tlHeight" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnRegister"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/button"
       android:text="Registrar"
       android:textColor="@color/white"
       android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@id/tlHeight"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>